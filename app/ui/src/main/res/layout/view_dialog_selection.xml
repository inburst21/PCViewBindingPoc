<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <include
        android:id="@+id/title_bar"
        layout="@layout/view_title_bar"
        android:layout_width="@dimen/width_dialog_normal"
        android:layout_height="@dimen/height_toolbar_normal" />

    <include
        android:id="@+id/view_list"
        layout="@layout/view_list"
        android:layout_width="@dimen/width_dialog_normal"
        android:layout_height="@dimen/height_dialog_list_view"/>

    <include
        android:id="@+id/confirm_bar"
        layout="@layout/view_confirm_bar"
        android:layout_width="@dimen/width_dialog_normal"
        android:layout_height="@dimen/height_toolbar_normal"
        android:background="@color/DialogToolbarBackground"/>

</LinearLayout>